            </form>
        </div>
    </div>


</main>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap');

    body {
        font-family:'Times New Roman', Times, serif;
        margin: 0;
    }

    header {
        background-color: #4D4545;
        color: #fff;
        padding: 1rem;
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }

    .logo-container {
        display: flex;
        align-items: center;
        flex-direction: column;
        margin-left: 20px;
    }

    .logo {
        width: 50px;
        height: 50px;
        margin-right: 1rem;
    }

    .mainclass {
        height:350px;
        display: flex;
        background-color: #dab0b0;
        border-radius: 20px;
    }

    .left {
        width: 60%;
        float: left;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin-left: 10px;
        color: #8D6262;
    }

    .right {
        width: 40%;
        float: left;s
        display: flex;
        justify-content: center;
        align-items: center;


    }

    img {
        object-fit: cover;
        height: 300px;
        width: 300px;
    }

    main {
        background-color: #8D6262;
        padding: 10px;
        text-align: center;
    }

    h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    p {
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2rem;
        }

        p {
            font-size: 1.2rem;
        }

        button {
            font-size: 1rem;
        }

    }

    .colorcontainer {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 550px;
        width: 100%;
    }

    .container {
        display: grid;
        height: 500px;
        width: 100%;
        background-color: #dab0b0;
        border-radius: 20px;
        grid-template-areas:
    "title"
    "top"
    "mid1"
    "mid2"
    "mid3"
    "bot";
    }

    h3 {
        font-size: 16px;
    }

    .title {
        display: flex;
        align-items: center;
        justify-content: center;
        grid-area: title;
        margin-top: 50px;
        font-size: 35px;
    }

    .id {
        display: flex;
        align-items: center;
        justify-content: center;
        grid-area: top;
        margin-left: 23px;
    }

    input {
        width: 250px;
        height: 25px;
    }

    .passwordnum {
        display: flex;
        align-items: center;
        justify-content: center;
        grid-area: mid1;
    }


    button {
        width: 160px;
        height: 50px;
        border-radius: 20px;
    }

    .button {
        display: flex;
        align-items: center;
        justify-content: center;
        grid__area: bot;
        font-size: 17px;
        gap: 10px;

    }

    input {
        border-radius: 10px;
        padding: 4px 8px;
    }

    form i {
        margin-left: -25px;
        cursor: pointer;

    }

    #ai_logo {
        width: 50px;
        height: 50px;
        border-radius: 20px;
        margin-right: 5px;
    }
</style>
<script>
    const togglePassword = document.querySelector("#togglePassword");
    const password = document.querySelector("#password");
    const signInButton = document.querySelector("#signin");
    const inputId = document.querySelector("#inputid");

    const correctAccountNumber = "123456";
    const correctPassword = "secret";

    function goToSignUpPage() {
        window.location.href = "signup.html";
    }

    function isAccountCorrect() {
        return inputId.value === correctAccountNumber;
    }

    function moveButton() {
        // if (!isAccountCorrect()) {
        //     const currentPosition = signInButton.style.transform;

        //     if (currentPosition === 'translateX(-100px)') {
        //         signInButton.style.transform = 'translateX(100px)';
        //     } else {
        //         signInButton.style.transform = 'translateX(-100px)';
        //     }
        // } else {
        //     signInButton.style.transform = '';
        // }
    }

    signInButton.addEventListener("mouseenter", moveButton);

    togglePassword.addEventListener("click", function () {
        const type = password.getAttribute("type") === "password" ? "text" : "password";
        password.setAttribute("type", type);
        this.classList.toggle("bi-eye");
    });

    const form = document.querySelector("form");
    form.addEventListener('signin', function (e) {
        e.preventDefault();
    })
</script>
</body>
</html>